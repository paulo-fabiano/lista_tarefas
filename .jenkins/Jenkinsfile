pipeline {

    agent {
        docker {
            image 'maven:3.8.3-openjdk-17'
        }
    }

    stages {
        // Build da Imagem Docker
        stage('Build Backend') { 
             // Steps
            steps {
               sh 'mvn clean install -DskipTests -Dmaven.test.skip=true -Dmaven.build.dest=/app/target' 
            }
        }

    }

}